// Place your settings in this file to overwrite the default settings
{
    "vim.easymotion": true,
    "vim.timeout": 1000,
    "vim.showcmd": true,
    "vim.useSystemClipboard": true,
    "vim.otherModesKeyBindingsNonRecursive": [{
        "before": ["V"],
        "after": ["v", "$"]
    }, {
        "before": ["Y"],
        "after": ["y", "$"]
    }, {
        "before": ["v", "v"],
        "after": ["0", "v", "$"]
    }],
    "vim.hlsearch": true,
    "vim.ignorecase": false,

    "ctags": {
        "executePath": "/Users/rhys/.gem/ruby/2.3.3/bin/ripper-tags",
        "options": "--tag-file=.tags --recursive --force --exclude=/assets/ --exclude=.bundle --exclude=.git/ --exclude=coverage/ --exclude=.arcanist-extensions/ --exclude=log/ --exclude=tmp/ --exclude=bin/",
        "fileName": ".tags"
    },

    "rust.checkOnSave": true,

    "editor.rulers": [80, 100],
    "editor.wordWrapColumn": 100,
    "editor.wordWrap": "wordWrapColumn",

    "editor.minimap.enabled": true,
    "editor.minimap.renderCharacters": false,
    "editor.autoClosingBrackets" : false,
    "editor.lineNumbers": "relative",
    "editor.fontFamily": "Hasklig",
    "editor.fontSize": 12.8,
    "editor.codeLens": true,
    "editor.folding": false,
    "editor.renderControlCharacters": true,
    "editor.renderIndentGuides": true,
    "editor.trimAutoWhitespace": true,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "ruby.lint": {
        "rubocop": true,
        "ruby": true //runs ruby -wc
    },

    "files.associations": {
        "*.js.erb": "javascript",
        "*.jsx": "javascript",
        "Envfile": "ruby",
        ".env.?*": "shellscript"
    },
    "editor.cursorStyle": "block",
    "editor.cursorBlinking": "blink",
    "window.zoomLevel": 0,
    "workbench.colorTheme": "Tinacious Contrast"
  }
